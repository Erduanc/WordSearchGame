<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pause_bg_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pause_background" />

    <ImageView
        android:id="@+id/pause_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/pause_bg_view"
        app:layout_constraintEnd_toEndOf="@+id/pause_bg_view"
        app:layout_constraintStart_toStartOf="@+id/pause_bg_view"
        app:layout_constraintTop_toTopOf="@+id/pause_bg_view"
        app:srcCompat="@drawable/exit_warning" />

    <Button
        android:id="@+id/exit_yes"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:backgroundTint="#00FFFFFF"
        app:elevation="0dp"
        app:icon="@drawable/exit_yes"
        app:iconPadding="0dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/pause_bg_view"
        app:layout_constraintStart_toStartOf="@+id/pause_bg_view"
        app:layout_constraintTop_toBottomOf="@+id/pause_title_view" />

    <Button
        android:id="@+id/exit_no"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:backgroundTint="#00FFFFFF"
        app:elevation="0dp"
        app:icon="@drawable/exit_no"
        app:iconPadding="0dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/pause_bg_view"
        app:layout_constraintStart_toStartOf="@+id/pause_bg_view"
        app:layout_constraintTop_toBottomOf="@+id/exit_yes" />
</androidx.constraintlayout.widget.ConstraintLayout>