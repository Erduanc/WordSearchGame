<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_classic"
        app:srcCompat="@drawable/menu_background_middle_left" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="365dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_classic"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/menu_background_bottom" />

    <Button
        android:id="@+id/button_chess"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/menu_chess_button"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_classic" />

    <Button
        android:id="@+id/button_history"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/menu_history_button"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chess" />

    <Button
        android:id="@+id/button_classic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_marginTop="164dp"
        android:layout_marginBottom="315dp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/menu_classic_button"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_background_top" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginLeft="215dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_classic"
        app:layout_constraintStart_toStartOf="@+id/button_classic"
        app:srcCompat="@drawable/menu_background_middle_right" />

</androidx.constraintlayout.widget.ConstraintLayout>